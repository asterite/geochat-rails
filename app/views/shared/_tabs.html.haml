%ul#tabs
  - selected_tab = @selected_tab || controller.class.name[0 .. -11].underscore.to_sym
  - [['Home', :root],
     ['Groups', :groups],
     ['Channels', :channels],
     ['Requests', :invites],
     ['Settings', :user]].each do |name, action|
    %li{:class => (selected_tab == action ? 'selected' : '')}= link_to name, eval("#{action}_path")

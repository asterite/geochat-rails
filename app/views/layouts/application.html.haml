!!! html
%html
  %head
    %title GeoChat
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #head
        = link_to 'GeoChat', root_path, :id => 'title'
        - if @user.persisted?
          %span#toolbar #{@user.login} | #{link_to 'Logout', session_path, :method => :delete}
      #main
        = yield
    #version_separator
    #version Version #{geochat_version}

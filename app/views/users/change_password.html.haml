%h4 Change your password

= form_for @user, :url => update_user_password_path, :html => {:method => :post} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2 #{pluralize(@user.errors.count, "error")} prohibited you to change your password:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :old_password, 'Old password'
    %br
    = f.password_field :old_password
  %p
    = f.label :password, 'New password'
    %br
    = f.password_field :password, :value => ''
  %p
    = f.label :password_confirmation, 'New password confirmation'
    %br
    = f.password_field :password_confirmation, :value => ''
  = submit_tag 'Change password'
